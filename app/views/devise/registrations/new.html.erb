<script language="Javascript">
  Stripe.setPublishableKey("<%= ENV['STRIPE_TEST_PUBLISHABLE_KEY'] %>");
</script>
<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h4><%= t('.sign_up', :default => "Sign up") %></h4>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="panel-body">
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
          <%#= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form", class: 'cc_form' }) do |f| %>
            
            <div class="form-group">
              <div class="col-md-12 no-padding">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
              </div>
            </div>
            
            <div class="form-group">
              <div class="col-md-6 no-padding">
                <%= f.label :name %>
                <%= f.text_field :name, placeholder: "Full name as in REN", class: "form-control" %>
              </div>
              <div class="col-md-6 no-padding left-padding">
                <%= f.label :telephone %>
                <%= f.text_field :telephone, class: "form-control" %>
              </div> 
            </div>
            
            <div class="form-group">
              <div class="col-md-6 no-padding">
                <%= f.label :company %>
                <%= f.text_field :company, placeholder: "Agency Name", class: "form-control" %>
              </div>
              <div class="col-md-6 no-padding left-padding">
                <%=  f.label :agentno %>
                <%= f.text_field :agentno,  placeholder: "REN Number", class: "form-control" %>
              </div>
            </div>        
            
            <div class="form-group">
              <div class="col-md-6 no-padding">
                <%= f.label :country %>
                <%#= f.text_field :prefercountry, class: "form-control" %>
                <%
                @places = Place.where(status: true)
                @places_for_dropdown = []
                @places.each do |i|
                  @places_for_dropdown << [i.name, i.id]
                end %>
                <%= select("prefercountry", "name", options_for_select(@places_for_dropdown, @places_for_dropdown.first), {}, {class: 'form-control'}) %>  
             </div>
            </div>
            
            <div class="form-group">
              <div class="col-md-12 no-padding">
                <%= f.label :password %>
                <%= f.password_field :password, class: "form-control" %>
              </div>
            </div>
            
            <div class="form-group">
              <div class="col-md-12 no-padding">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, class: "form-control" %>
              </div>
            </div>
            
            <div class="form-group">
              <div class="col-md-12 no-padding">
                <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-primary" %>
              </div>
            </div>
            
          <% end %>
          
        </div> <!--panel-body-->
      </div> <!-- md-8-->
      <div class="col-md-4">
        <br><img src="../assets/thankyou.gif" style="width:80%"><br>
      </div>
    </div> <!--row-->
  </div> <!--container-->
</div>
<%= render "devise/shared/links" %>
