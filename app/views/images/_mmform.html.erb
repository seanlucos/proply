<%#= render 'shared/errors', obj: @image %>
<!-- table & tr inserted so that confirm button is pressable. i dont know why-->
<table>
  <tr>
  <div class='row'> 
  <div class='col-xs-offset-0 col-xs-12'>
    <div class="well" >
      <div  class="form-group">
        <% @article.images.each do |t| %>
          <div align="center" class='col-xs-12 gutter-0'>
            <div style="background-image: url('<%= t.picture.url %>');background-size: cover; position: relative; border: 3px solid; width: 250px; height: 188px;">
              <div class="property-x">
                <%= link_to t('.destroy', :default => "x"), image_path(t),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }%>
              </div>
            </div>
          </div>
          <div align="center" class='col-xs-12 gutter-0'>
            <hr>
          </div>
        <% end %>
      </div>
      
<!--to pacify upload ELSE first upload will NOT work - dont know why!!-->
    <%= form_for @image, :url => { :controller => "images", :action => "create"} do |x| %>
    <% end %>
    
      <%= form_for @image, :html => { multipart: true, :class => "form-horizontal image" } do |f| %>
        <% if @image.errors.any? %>
          <div id="error_expl" class="panel panel-danger">
            <div class="panel-heading">
              <h3 class="panel-title"><%= pluralize(@image.errors.count, "error") %> prohibited this image from being saved:</h3>
            </div>
            <div class="panel-body">
              <ul>
                <% @image.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
      
        <% if @article.images.count < 6 %>
          <div class="form-group">
            <div class='tdbg col-xs-12'>
              <br><br><br><br><br><br><br>
              <%="Add Images?? Amplify your ad ::.."%><br><%="Share more images" %>
              <%#= f.hidden_field :name, :value => "test hide" %>
              <%= f.file_field :picture, accept: 'image/jpg,image/jpeg,image/gif,image/png',  :onchange => "this.form.submit()" %>
              <br><br><br><br>
            </div>
          </div>
        <% end %>
        
      <% end %>
    </div>
  </div>
</div>
</tr>
</table>

<script type="text/javascript">
  $('#image_picture').bind('change', function() {
  var size_in_megabytes = this.files[0].size/1024/1024;
  if (size_in_megabytes > 5) {
    alert('Maximum file size is 5MB.');
}
});
</script>