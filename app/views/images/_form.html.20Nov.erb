            <ul>
              <% @image.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      <%#= f.hidden_field :name, :value => "test hide" %>
      <%#= f.file_field :picture, accept: 'image/jpg,image/jpeg,image/gif,image/png',  :onchange => "this.form.submit()" %>

    <% end %>
  <% end %>


