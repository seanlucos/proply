<% if session[:mobile] == "Y" %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <%= render 'mmarticle', obj: @articles %> 
      </div>
      <div align="left" >
        <%= will_paginate %>
      </div> 
    </div>
  </div>
<% else %>
  <div class="container">
    <div class='row'> 
      <div class='col-sm-offset-0 col-sm-12 gutter-0'>
        <% if logged_in? and current_user.admin? %>
          <%= render 'articleadmin', obj: @articles %>        
        <% else %>
          <br><%= render 'article', obj: @articles %>
        <% end %>
      </div>
      <div align="left" >
        <%= will_paginate %>
      </div>
    </div>
  </div>
<% end %>